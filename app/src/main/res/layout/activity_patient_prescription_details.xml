<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#f1f9fa"
    android:layout_height="match_parent"
    tools:context=".PatientPrescriptionDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_patient_pres_details"
            android:text=" Hello From Here!!"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

    <Button
        android:id="@+id/btn_patient_pres_details"
        android:layout_marginTop="5dp"
        android:text="Order To"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#5b7784"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>