<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="#f1f9fa"
    android:layout_height="match_parent"
    tools:context=".ShopRecordsActivity">

    <ProgressBar
        android:id="@+id/pb_record"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/layout_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#6CAEB6"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="This month sell:"
                android:textSize="20sp"
                android:textColor="#f7f7f7"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_month_record"
                android:text="100000"
                android:textColor="#D56744"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>

        <TextView
            android:text="Today's Sell:"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <ListView
                android:id="@+id/lv_today_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"></ListView>

            <TextView
                android:id="@+id/tv_today_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#B2DDE3"
                android:gravity="center"
                android:padding="20dp"
                android:text="1000"
                android:textColor="#407841"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>