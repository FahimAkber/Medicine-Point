<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ShopOrderDetailsActivity">

    <TextView
        android:id="@+id/tv_shop_order_details_date"
        android:text="Date"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_shop_order_details_status"
        android:text="Date"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="#ec4444"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_shop_order_details_medicine"
        android:layout_weight="1"
        android:text="my medicine"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_shop_order_details_cancel"
            android:text="Cancel"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/et_bg"
            android:textColor="#ea2b35"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_shop_order_details_accept"
            android:text="Accept"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/et_bg"
            android:textColor="#1bac58"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>